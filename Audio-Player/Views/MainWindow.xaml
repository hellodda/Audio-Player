<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Audio_Player.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Audio_Player"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:aui="using:Audio_Player"
    mc:Ignorable="d"
    Title="Audio-Player">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>



        <ListView x:Name="MyListView"
          CanDragItems="True"
          CanReorderItems="True"
          AllowDrop="True"
          SelectionMode="Single" 
          ItemsSource="{x:Bind MainViewModel.Songs}"
          HorizontalAlignment="Left"
          Width="480" Grid.Column="0"
          SelectedItem="{x:Bind MainViewModel.SelectedSong, Mode=TwoWay}">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin" Value="0,0,0,10" />
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="aui:SongModel">
                    <Border Width="450" Height="85" CornerRadius="10" Background="{ThemeResource ControlFillColorDefaultBrush}">
                        <StackPanel Orientation="Horizontal" Spacing="10" Padding="10">

                            <Border CornerRadius="10">
                                <Image Width="60" Height="60" Source="{x:Bind ImagePath}" />
                            </Border>

                            <TextBlock Text="{x:Bind Title}" VerticalAlignment="Center" FontSize="16" />

                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
       
        
        <Image Grid.Column="1" Source="{x:Bind MainViewModel.SelectedSong.ImagePath, Mode=OneWay}" Stretch="UniformToFill"/>
    

        <Border Grid.Column="1">

            <Border.Background>
                <AcrylicBrush TintColor="White" TintOpacity="0.01"/>
            </Border.Background>
        </Border>

        <MediaPlayerElement Grid.Column="1"
                    AreTransportControlsEnabled="True"
                    AutoPlay="False"
                    Width="auto"
                    Height="auto"
                    Stretch="UniformToFill"
                    />

    </Grid>
</Window>
